{
  "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "sourceMap": true,
      "outDir": "./out",
      "strict": true,
      "noImplicitAny": false,
      "moduleResolution": "node",
      "baseUrl": "./",
      "typeRoots": [
          "node_modules/@types"
      ],
      "esModuleInterop": true
  },
  "include": [
      "src/**/*"
  ],
  "exclude": [
      "node_modules",
      "**/*.test.ts"
  ]
}